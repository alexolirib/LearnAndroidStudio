<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAbrirCachorroId"
        android:layout_width="@dimen/widthBtnMain"
        android:layout_height="@dimen/heightBtnMain"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="29dp"
        android:text="IDADE CACHORRO" />

    <Button
        android:id="@+id/btnAbrirAdivinha"
        android:layout_width="@dimen/widthBtnMain"
        android:layout_height="@dimen/heightBtnMain"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnAbrirCachorroId"
        android:layout_marginTop="169dp"
        android:text="ADIVINHA" />

    <Button
        android:id="@+id/btnAbrirCaraOuCoroaId"
        android:layout_width="@dimen/widthBtnMain"
        android:layout_height="@dimen/heightBtnMain"
        android:layout_alignStart="@+id/btnAbrirCachorroId"
        android:layout_alignTop="@+id/btnAbrirFraseId"
        android:text="Cara ou Coroa" />

    <Button
        android:id="@+id/btnAbrirFraseId"
        android:layout_width="@dimen/widthBtnMain"
        android:layout_height="@dimen/heightBtnMain"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAbrirAlcoolId"
        android:layout_marginBottom="103dp"
        android:text="Frase do dia" />

    <Button
        android:id="@+id/btnAbrirAlcoolId"
        android:layout_width="@dimen/widthBtnMain"
        android:layout_height="@dimen/heightBtnMain"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnAbrirAdivinha"
        android:layout_marginStart="38dp"
        android:text="GASOLINA OU ALCOOL" />

    <Button
        android:id="@+id/btnAbrirAtmConsultoriaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAbrirFraseId"
        android:layout_alignTop="@+id/btnAbrirCachorroId"
        android:width="@dimen/widthBtnMain"
        android:height="@dimen/heightBtnMain"
        android:text="ATM CONSULTORIA"
        android:textSize="12sp" />

</android.widget.RelativeLayout>